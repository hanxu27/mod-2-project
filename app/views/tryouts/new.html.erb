
<%= render 'errors' %>
<div class="card bg-light mb-3 mx-auto" style="max-width: 35rem;">
  <div class="card-header"><h5><strong><em>New Tryout Form</em></strong></h5></div>
  <div class="card-body">
    <p class="card-text">
    <%= form_for @tryout do |f| %>
    <%= f.label "Select Age Group" %>
    <%= f.select "age_group", Team.all.map {|t| t.age_group }.uniq %> <br>
    <%= f.label "Enter Season: (2019)"%>
    <%= f.text_field :season %> <br>
    <%= hidden_field_tag "tryout[player_id]", params[:tryout][:player_id] %><br><br>
    <button type="submit" class="btn btn-primary">Submit</button>
    <% end %>
    </p>
  </div>
</div>