
<div class="card text-white bg-secondary mb-3 mx-auto" style="max-width: 20rem;">
  <div class="card-header mx-auto"><h4><strong>Coach Log In</strong></h4></div><br><br>
  <div class="card-body">
    <p class="card-text">
       <div class="row mx-auto">
    <div class='col-xs-12'>
        <%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: loginC_path) do |f| %>
            <div class="form-group">
                <div class="control-label col-sm-4">
                    <%= f.label :name %>
                </div>
                <div class ="col-sm-12">
                    <%= f.text_field :name, class: "form-control", placeholder: "Enter Name", autofocus: true %>
                 </div>
            </div><br>
            <div class="form-group">
                <div class="control-label col-sm-4">     
                    <%= f.label :password %>
                </div>
                <div class ="col-sm-12">
                    <%= f.password_field :password, class: "form-control", autocomplete: "off"%>
                </div>
            </div>    
            <div class="form-group">
                <div class = "col-sm-offset-2 col-sm-4">
                    <%= f.submit "Log in", class: 'btn btn-primary'%> 
                </div>
            </div>
        <% end %>
    </div>
</div> 
    </p>
  </div>
</div>