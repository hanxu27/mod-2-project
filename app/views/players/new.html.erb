<div class="card text-white bg-success mb-3 mx-auto" style="max-width: 35rem;">
  <div class="card-header mx-auto"><h5><strong><em>Sign Up</em></strong></h5></div>
  <div class="card-body">
    <p class="card-text">
    <%= render 'errors', obj: @player%>
    <%= form_for(@player, :html => {class: "form-horizontal", role: "form"}) do |f| %>
            <div class="form-group">
                <div class="control-label col-sm-2">
                    <%= f.label :name %>
                </div>
                <div class ="col-sm-14">
                    <%= f.text_field :name, class: "form-control", placeholder: "Eneter Name", autofocus: true %>
                 </div>
            </div>
            <div class="form-group">
                <div class="control-label col-sm-2">     
                    <%= f.label :password %>
                </div>
                <div class ="col-sm-14">
                    <%= f.password_field :password, class: "form-control", placeholder: "Enter Password"%>
                </div>
            </div>  <br><br>  
                <button type="submit" class="btn btn-primary btn-sm mx-auto">Sign Up</button>
                <a class="btn btn-danger btn-sm mx-auto" href="<%=root_path%>" role="button">Cancel</a>
            </div>
        <% end %>
    </p>
  </div>
</div>
