<h1 align="center"> Signup </h1>

<%= render 'errors', obj: @player%>

<div class='row'>
    <div class='col-xs-12'>
        <%= form_for(@player, :html => {class: "form-horizontal", role: "form"}) do |f| %>
            <div class="form-group">
                <div class="control-label col-sm-2">
                    <%= f.label :name %>
                </div>
                <div class ="col-sm-14">
                    <%= f.text_field :name, class: "form-control", placeholder: "Eneter Name", autofocus: true %>
                 </div>
            </div>
            <div class="form-group">
                <div class="control-label col-sm-2">     
                    <%= f.label :password %>
                </div>
                <div class ="col-sm-14">
                    <%= f.password_field :password, class: "form-control", placeholder: "Enter Password"%>
                </div>
            </div>    
            <div class="form-group">
                <div class = "col-sm-offset-2 col-sm-4">
                    <%= f.submit 'Sign up', class: 'btn btn-primary'%> 
                    <a class="btn btn-danger" href="<%=root_path%>" role="button">Cancel</a>
                </div>
            </div>
        <% end %>
        <%=button_to 'Cancel', root_path, method: :get%>
    </div>
</div>

